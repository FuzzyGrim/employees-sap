<mvc:View controllerName="ui5.quickstart.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:html="http://www.w3.org/1999/xhtml">
    
    <Table
        items="{employeeModel>/value}">
        <columns>
            <Column>
                <Text text="Name"/>
            </Column>
            <Column>
                <Text text="Location"/>
            </Column>
            <Column>
                <Text text="Category"/>
            </Column>
            <Column>
                <Text text="Modify"/>
            </Column>
            <Column>
                <Text text="Delete"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{employeeModel>name}"/>
                    <Text text="{employeeModel>location/title}"/>
                    <Text text="{employeeModel>category/title}"/>
                    <Button 
                        icon="sap-icon://edit" 
                        press=".onEditPress">
                        <customData>
                            <core:CustomData 
                                key="employeeId" 
                                value="{employeeModel>ID}" />
                        </customData>
                    </Button>
                    <Button 
                        icon="sap-icon://delete" 
                        press=".onDeletePress">
                        <customData>
                            <core:CustomData 
                                key="employeeId" 
                                value="{employeeModel>ID}" />
                        </customData>
                    </Button>
                </cells>
            </ColumnListItem>
        </items>
    </Table>

</mvc:View>