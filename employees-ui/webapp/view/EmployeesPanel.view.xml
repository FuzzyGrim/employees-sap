<mvc:View controllerName="ui5.quickstart.controller.EmployeesPanel"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core">
  <Panel expandable="true" expanded="true" class="sapUiResponsiveMargin" width="auto">
    <headerToolbar>
      <Toolbar>
        <Title text="{i18n>appTitle}" class="sapThemeHighlight-asColor"/>
      </Toolbar>
    </headerToolbar>

    <content>
      <Table id="employeesTable" items="{
              path : 'employeeModel>/value',
              sorter : {
                  path : 'name' 
              }
            }">
        <headerToolbar>
          <Toolbar>
            <Title text="{i18n>data}"/>
            <ToolbarSpacer/>
            <SearchField width="50%" search=".onFilterEmployees" showRefreshButton="true"/>
          </Toolbar>
        </headerToolbar>
        <columns>
          <Column hAlign="Center">
            <Text text="{i18n>name}"/>
          </Column>
          <Column hAlign="Center">
            <Text text="{i18n>location}"/>
          </Column>
          <Column hAlign="Center">
            <Text text="{i18n>category}"/>
          </Column>
          <Column hAlign="Center">
            <Text text="{i18n>modify}"/>
          </Column>
          <Column hAlign="Center">
            <Text text="{i18n>delete}"/>
          </Column>
        </columns>
        <items>
          <ColumnListItem vAlign="Middle" type="Navigation" press=".onPress">
            <customData>
              <core:CustomData key="employeeId" value="{employeeModel>ID}" />
            </customData>

            <cells>
              <Text text="{employeeModel>name}"/>
              <Text text="{employeeModel>location/title}"/>
              <Text text="{employeeModel>category/title}"/>
              <Button icon="sap-icon://edit" press=".onEditPress">
                <customData>
                  <core:CustomData key="employeeId" value="{employeeModel>ID}" />
                </customData>
              </Button>
              <Button icon="sap-icon://delete" press=".onDeletePress">
                <customData>
                  <core:CustomData key="employeeId" value="{employeeModel>ID}" />
                </customData>
              </Button>
            </cells>
          </ColumnListItem>
        </items>
      </Table>
    </content>
  </Panel>
</mvc:View>
