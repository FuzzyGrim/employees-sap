<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <Dialog id="helloDialog" title="{i18n>dialog-title}">
    <Label text="{i18n>name}" labelFor="input-name"/>
    <Input id="input-name" required="true" value="{/name}"/>

    <Label text="{i18n>location}" labelFor="input-location"/>
    <Input id="input-location" required="true" value="{/location/title}"/>

    <Label text="{i18n>category}" labelFor="input-category"/>
    <Input id="input-category" required="true" value="{/category/title}"/>

    <Label text="{i18n>photo}" labelFor="input-photo"/>
    <Input id="input-photo" type="Url" value="{/photo}"/>

    <Label text="{i18n>age}" labelFor="input-age"/>
    <Input id="input-age" type="Number" value="{/age}"/>

    <Label text="{i18n>salary}" labelFor="input-salary"/>
    <Input id="input-salary" type="Number" value="{/salary}"/>

    <Label text="{i18n>city}" labelFor="input-city"/>
    <Input id="input-city" value="{/city}" />

    <Label text="{i18n>address}" labelFor="input-address"/>
    <Input id="input-address" value="{/address}"/>

    <beginButton>
      <Button text="Save" press=".onSaveDialogPress">
        <customData>
          <core:CustomData key="employeeId" value="{/ID}" />
        </customData>
      </Button>
    </beginButton>

    <endButton>
      <Button text="Cancel" press=".onCancelDialogPress" />
    </endButton>
  </Dialog>
</core:FragmentDefinition>